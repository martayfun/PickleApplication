@model IEnumerable<PickleApplication.BusinessLayer.Models.Link>
@{
    ViewBag.Title = "All";
}

@if (ViewBag.DeleteStatus != null)
{
    <div class="alert alert-@(ViewBag.DeleteStatus ? "success" : "danger") alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa @(ViewBag.DeleteStatus ? "fa-check" : "fa-ban")"></i> @(ViewBag.DeleteStatus ? "Başarılı" : "Hata!")</h4>
        @(ViewBag.DeleteStatus ? "Link silme işlemi başarılı bir şekilde gerçekleşmiştir." : "Link silme sırasında bir hata oluştu!")
    </div>
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Links</h3>
                    <div class="box-tools pull-right">
                        <a href="@Url.Action("Modify","Link")" class="btn btn-info"><i class="fa fa-plus"></i></a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Durum</th>
                                <th>Tipi</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var link in Model)
                            {
                                <tr>
                                    <td>@link.Name</td>
                                    <td>@link.Type</td>
                                    <td>
                                        @if (link.IsActive)
                                        {
                                            <span class="label label-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="label label-warning">Pasif</span>
                                        }
                                    </td>
                                    <td><a href="@Url.Action("Modify","Link", new { id = link.LinkId })" class="btn btn-info"><i class="fa fa-edit"></i></a></td>
                                    <td><a href="@Url.Action("Delete","Link", new { id = link.LinkId })" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>